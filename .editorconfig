root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 1

[*.{vue,html}]
indent_style = tab
indent_size = 1

[*.{js,ts,mjs}]
indent_style = tab
indent_size = 1

[*.{json,yml,yaml}]
indent_style = tab
indent_size = 1

[*.md]
trim_trailing_whitespace = false